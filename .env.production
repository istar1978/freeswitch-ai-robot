# 生产环境配置文件
# 使用方法：复制此文件为 .env 并修改相应的值

# ========== Redis配置 ==========
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ========== MySQL配置 ==========
MYSQL_ENABLED=true
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=aibot
MYSQL_PASSWORD=aibot123
MYSQL_DATABASE=aibot
MYSQL_ROOT_PASSWORD=root123

# ========== API配置 ==========
API_ENABLED=true
API_HOST=0.0.0.0
API_PORT=8080

# ========== WebUI配置 ==========
WEBUI_ENABLED=true
WEBUI_HOST=0.0.0.0
WEBUI_PORT=8081

# ========== 认证配置 ==========
AUTH_ENABLED=true
AUTH_ADMIN_USERNAME=admin
AUTH_ADMIN_PASSWORD=admin123
AUTH_JWT_SECRET=change-this-jwt-secret-key-in-production
AUTH_JWT_EXPIRATION=86400

# ========== FreeSWITCH配置 ==========
FREESWITCH_ENABLED=false
FREESWITCH_HOST=localhost
FREESWITCH_PORT=8021
FREESWITCH_PASSWORD=ClueCon
FREESWITCH_AUDIO_SAMPLE_RATE=8000
FREESWITCH_DIALPLAN_CONTEXT=public
FREESWITCH_DIALPLAN_EXTENSION=ai_robot

# ========== ASR配置 ==========
ASR_ENABLED=true
ASR_PROVIDER=funasr
ASR_WS_URL=ws://funasr:10095
ASR_SAMPLE_RATE=16000
ASR_VAD_THRESHOLD=0.5

# ========== LLM配置 ==========
LLM_ENABLED=false
LLM_PROVIDER=openai
LLM_API_URL=http://localhost:8000/v1/chat/completions
LLM_API_KEY=
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=30

# ========== TTS配置 ==========
TTS_ENABLED=true
TTS_PROVIDER=cosyvoice
TTS_API_URL=http://cosyvoice:50000/tts
TTS_API_KEY=
TTS_VOICE=zh-CN-XiaoxiaoNeural
TTS_SAMPLE_RATE=16000

# ========== 日志配置 ==========
LOG_LEVEL=INFO
LOG_FILE=/var/log/ai-robot/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# ========== 多FreeSWITCH实例配置 ==========
# 如果需要配置多个FreeSWITCH实例，可以在WebUI中配置
# 或者通过API接口动态添加
